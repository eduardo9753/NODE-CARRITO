<section>
    <div class="container">
        <h2 class="text-center">Register Product</h2>
        <div class="text-center mt-5"><a href="/admin/product/products" class="btn btn-primary">Back a all Product</a></div>
        <br><br>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/product/products/addForm" method="POST" enctype="multipart/form-data">
                            <div class="form-group my-3">
                                <label for="">Title</label>
                                <input type="text" name="title" class="form-control" id="">
                            </div>
                            <div class="form-group my-3">
                                <label for="">Description</label>
                                <textarea name="description" id="" class="form-control"></textarea>
                            </div>
                            <div class="form-group my-3">
                                <label for="">Category</label>
                                <select name="category" class="form-control" id="">
                                    {{#each dataCategory}}
                                    <option value="{{slug}}">{{title}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group my-3">
                                <label for="">Price</label>
                                <input type="text" name="price" class="form-control" id="">
                            </div>
                            <div class="form-group my-3">
                                <label for="">Image</label>
                                <input type="file" name="imageProduct" accept="image/gif, image/png, image/jpeg" class="form-control" id="img">
                                <img src="" id="imgPreview" alt="imgPreview">
                            </div>
                            <div class="form-group my-3">
                                <input type="submit" class="btn btn-success" value="Register" name="" id="">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>