<section>
    <div class="container">
        <h2>Page</h2>
        <div class="text-center mt-5"><a href="/pages/add" class="btn btn-primary">Add new Page</a></div>
        <br><br>
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <div class="col-md-12 mx-auto">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each dataSlug}}
                                <tr id="id_{{_id}}" class="{{slug}}">
                                    <td>{{title}}</td>
                                    <td><a href="/pages/edit/{{_id}}" class="btn btn-warning">Edit</a></td>
                                    <td>
                                      <form action="/pages/delete/{{_id}}?_method=DELETE" method="POST">
                                         <input type="submit" value="Delete" class="btn btn-danger">
                                      </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $('tbody').sortable({
       item : "tr:not('.home')",
       placeholder : "ui-state-hightligth",
       update : function() {
           let ids = $('tbody').sortable("serialize");
           let url = "/pages/reorder-pages";
           $.post(url , ids);
       }
    });
</script>